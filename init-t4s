#!/bin/bash

# Colors for output
GREEN="\033[0;32m"
YELLOW="\033[0;33m"
NC="\033[0m"

# Define file path
T4S_PATH="/usr/local/bin/t4s"

# Remove old file if it exists
if [ -f "$T4S_PATH" ]; then
    echo -e "${YELLOW}Removing old t4s file...${NC}"
    sudo rm -f "$T4S_PATH"
fi

# Create directory if not exists and download the new file
sudo mkdir -p /usr/local/bin
sudo curl -o "$T4S_PATH" https://raw.githubusercontent.com/atikullahwd222/cpanel-sysconfig-script/refs/heads/main/t4s.sh
sudo chmod +x "$T4S_PATH"

# Clear screen and display welcome message
clear
echo ""
echo -e "${GREEN}Welcome to Theme4Sell${NC}"
echo ""
